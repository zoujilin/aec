{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile", 
            "command": "gcc", 
            "args": [
                "${workspaceFolder}\\*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g", 
                "-Wall",
                "-static-libgcc", 
                "-std=c++17" 
            ], 
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true 
            },
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false, 
                "panel": "shared" 
            }
        }
    ]
}